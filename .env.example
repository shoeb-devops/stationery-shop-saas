# ==============================================
# Stationery Shop SaaS - Environment Variables
# ==============================================
# Copy this file to .env and update the values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# CSRF Trusted Origins (comma-separated, include protocol)
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database (PostgreSQL)
DATABASE_URL=postgres://stationery_user:your-db-password@db:5432/stationery_shop

# Or individual DB settings (used by docker-compose)
POSTGRES_DB=stationery_shop
POSTGRES_USER=stationery_user
POSTGRES_PASSWORD=your-secure-db-password

# CORS (comma-separated origins)
CORS_ALLOWED_ORIGINS=https://your-domain.com
